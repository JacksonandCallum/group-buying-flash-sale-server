<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lvchenglong.mapper.UserMapper">
    <insert id="insert" parameterType="com.lvchenglong.entity.User" useGeneratedKeys="true">
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="username != null">username,</if>
            <if test="password != null">password,</if>
            <if test="name != null">name,</if>
            <if test="role != null">role,</if>
            <if test="avatar != null">avatar,</if>
            <if test="phone != null">phone,</if>
            <if test="email != null">email,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="username != null">#{username},</if>
            <if test="password != null">#{password},</if>
            <if test="name != null">#{name},</if>
            <if test="role != null">#{role},</if>
            <if test="avatar != null">#{avatar},</if>
            <if test="phone != null">#{phone},</if>
            <if test="email != null">#{email},</if>
        </trim>
    </insert>

    <update id="updateById">
        update user
        <set>
            <if test="username != null">username = #{username},</if>
             <if test="password != null">password = #{password},</if>
            <if test="name != null">name = #{name},</if>
            <if test="role != null">role = #{role},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="email != null">email = #{email},</if>
        </set>
        <where> id = #{id} </where>
    </update>

    <delete id="deleteById">
        delete from user where id = #{id}
    </delete>


    <select id="selectByUserName" resultType="com.lvchenglong.entity.User">
        select * from user where username = #{username}
    </select>

    <select id="selectAll" resultType="com.lvchenglong.entity.User">
        select * from user
        <where>
            <if test="username != null and username != ''">and username = #{username}</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.lvchenglong.entity.User">
        select * from user
        <where>
            <if test="id != null">and id = #{id}</if>
        </where>
    </select>
</mapper>